<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:gravity="center"
    android:orientation="vertical">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="2dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:background="@drawable/selector_reward_gift_bg" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="center"
        android:text="dkdkdkkdddddddddddddddddd"
        android:textSize="@dimen/text_size_f"
        android:textColor="@color/text_color_a"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:text="dkdkdkkdddd"
        android:singleLine="true"
        android:textColor="@color/text_color_c"
        android:textSize="@dimen/text_size_f" />

</LinearLayout>